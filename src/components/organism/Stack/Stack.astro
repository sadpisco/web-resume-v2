---
import Typography from "@/components/atoms/Typography";
import type { StackBlockProps } from "@/types/blocks";

const { title, items }: StackBlockProps = Astro.props;
---

<section class="w-full flex flex-col gap-2">
  <Typography tag="h2" text={title} variant="label2" className="font-medium" />
  <div class="flex flex-wrap gap-2">
    {
      items?.map((item) => (
        <a
          href={item.url}
          target="_blank"
          rel="noopener noreferrer"
          class="font-light text-justify bg-gray-200 dark:bg-gray-800 rounded-md px-4 py-2 shadow-sm group hover:scale-110 transition-all duration-300"
        >
          <Typography
            tag="p"
            text={item.name}
            variant="label4"
            className="group-hover:text-underline"
          />
        </a>
      ))
    }
  </div>
</section>
